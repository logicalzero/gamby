// Display the splash screen and wait for the user to press a button.
void showSplashScreen() {
  gamby.clearDisplay();
  for (byte r=0; r<7; r++) {
    gamby.setPos(0,r);
    gamby.drawIcon(splashscreen, r);
  }

  gamby.setPos(0,7);
  gamby.print("Press any button to begin!");

  // Wait for a button to be pressed before continuing
  gamby.readInputs();
  byte initialInputs = gamby.inputs;
  while (gamby.inputs == initialInputs) {
    delay(100);
    gamby.readInputs();
  }
}


// Display the "Game Over" screen. 
void showGameOver() {
  byte i,j;
  // Fill in the 'well' from both top and bottom.
  for (byte i=0; i<8; i++) {
    for (byte j=1; j<WELL_WIDTH; j++) {
      gamby.drawBlock(j,i,15);
      gamby.drawBlock(WELL_WIDTH-j,15-i,15);
      delay(5);
    }
  }
  for (i=0; i<4; i++) {
    gamby.setPos(0,i+2);
    gamby.drawIcon(gameover, i);
  }
}
